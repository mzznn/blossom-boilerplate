body
  background #E5E0DC

h1, h2, h3
  color #333
  font-family "Libre Franklin", sans-serif
  line-height 125%
  font-weight 700

h1
  font-size 20px
  margin-bottom 5px

h2
  font-size 16px
  margin-bottom 40px

p
  color rgba(0, 0, 0, 0.9)
  font-family 'Noticia Text', serif
  font-size 20px
  font-weight 400
  line-height 125%

a
  color #333
  text-decoration underline

.grid
  display grid
  height 100%
  width auto
  grid-template-columns 50% 50%
  @media (max-width: 600px)
    grid-template-columns 100%

.info, .projects
  padding 5%

.projects

#left-half
  @media (max-width: 600px)
    height 100vh
    z-index 2
  .info
    position sticky
    left 0
    top 0

#right-half
  width 100%
  display flex
  justify-content center
  transition 0.4s ease-in-out
  @media (max-width: 600px)
    height 100vh
  
  img
    width 300px

/* panel styles */
.panel {
  /* min height incase content is higher than window height */
  min-height 50%
  display: flex;
}

