@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,600');

body
  background black
  font-family 'IBM Plex Sans', sans-serif
  font-weight: 400

.grid
  display grid
  height 100vh
  grid-template-columns 50% 50%
  @media (max-width: 600px)
    grid-template-columns 100%

#left-half
  @media (max-width: 600px)
    height 25vh
    z-index 2

#right-half
  display grid
  top 0
  height 100vh
  position sticky
  box-sizing border-box
  transition background-color 0.4s ease
  @media (max-width: 600px)
    height 75vh

.info, .projects
  font-size 22px
  padding 5%
  letter-spacing 0.4
  p
    color white
    font-weight 400
  .headline
      font-weight 600
  li
    margin-top 4px

a.mail, a.mail:active, a.mail:visited
  color white
  
.gradient {
  background: linear-gradient(90deg, #e7040f, #ff725c, #ffb700, #d5008f, #ff80cc, #137752, #9eebcf, #00449e, #96ccff);
  background-clip: border-box;
  background-size: auto auto;
  background-size: 1000% 1000%;
  color: #000;
  background-clip: text;
  text-fill-color: transparent;
-webkit-background-clip: text;
  background-clip: text;
-webkit-text-fill-color: transparent;

  animation: Shine 10s ease infinite;
  animation-name: Shine;
  animation-duration: 10s;
  animation-timing-function: ease;
  animation-delay: 0s;
  animation-direction: normal;
  animation-fill-mode: none;
  animation-iteration-count: infinite;
  animation-play-state: running;


-webkit-animation: Shine 10s ease infinite;
  animation-name: Shine;
  animation-duration: 10s;
  animation-timing-function: ease;
  animation-delay: 0s;
  animation-direction: normal;
  animation-fill-mode: none;
  animation-iteration-count: infinite;
  animation-play-state: running;

-moz-animation: Shine 10s ease infinite;
  animation-name: Shine;
  animation-duration: 10s;
  animation-timing-function: ease;
  animation-delay: 0s;
  animation-direction: normal;
  animation-fill-mode: none;
  animation-iteration-count: infinite;
  animation-play-state: running;
  }

@keyframes Shine {
  0%    {background-position:0% 50%}
  50%   {background-position:100% 50%}
  100%  {background-position:0% 50%}
  }

@-webkit-keyframes Shine {
  0%    {background-position:0% 50%}
  50%   {background-position:100% 50%}
  100%  {background-position:0% 50%}
  }

@-moz-keyframes Shine {
  0%    {background-position:0% 50%}
  50%   {background-position:100% 50%}
  100%  {background-position:0% 50%}
  }
